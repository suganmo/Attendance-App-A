<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed ">
    <tr>
      <td>
      <%= link_to "◀前月", user_path(date: @first_day.prev_month) ,class: "btn btn-sm btn-primary" %>
      <%= l(@first_day, format: :middle) %> 時間管理表
      <%= link_to "次月▶", user_path(date: @first_day.next_month) ,class: "btn btn-sm btn-primary" %>
      </td>
      <td >指定勤務開始時間 <%= format_basic_info(@user.designated_work_start_time) %><br>
          指定勤務終了時間 <%= format_basic_info(@user.designated_work_end_time) %></td>
      <td colspan="2"><%= format_basic_info(@user.basic_work_time) %> 基本勤務時間</td>
      <td >初日 <%= l(@first_day, format: :short) %></td>
    </tr>

    <tr>
      <td>所属 <%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名 <%= @user.name %></td>
      <td>コード</td><td>出勤日数 <%= @worked_sum %>日</td>
      <td>締め <%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>
<div>
 <% if current_user.admin? %>
  <nav>
    <ul class=menu-notice>
    <li>【所属長承認申請のお知らせ】</li>
    <li>【勤怠変更申請のお知らせ】</li>
    <li><%= link_to "【残業申請のお知らせ】",user_edit_overtime_application_infomation_path(@user), remote: true %></li>
    </ul>
  </nav>
 <% end %>
<div class="btn-users-show">
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSVを出力", user_path(format: :csv), class: "btn btn-primary" %>
</div>
<div class="btn-users-show">
  <%=link_to "勤怠修正ログ（承認済）", user_path, class: "btn btn-primary" %>
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">【所定外勤務】</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了予定時間</th>
        <th rowspan="2">時間外残業</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <% 
            css_class = 
            case %w{日 月 火 水 木 金 土}[day.worked_on.wday]
            when '土' then
              'text-primary'
            when '日' then
              'text-danger'
            end
            %>
          <td><%= link_to "残業申請", edit_overwork_request_user_path(@user, parems: { day: day.worked_on }), remote: true, class: "btn btn-primary" %></td>
           <td><%= l(day.worked_on, format: :short) %></td>
          <td class="<%= css_class %>"><%= %w{日 月 火 水 木 金 土}[day.worked_on.wday] %></td>
          <td><%= format_hour(day.started_at) if day.started_at.present? %></td>
          <td><%= format_min(day.started_at) if day.started_at.present? %></td>
          <td colspan = "1">
            <% if btn_text = attendance_state(day) && day.started_at.blank? %>
              <%= link_to "出勤登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= format_hour(day.finished_at)  if day.finished_at.present? %></td>
          <td><%= format_min(day.finished_at) if day.finished_at.present? %></td>
           <td>
            <% if (Date.current == day.worked_on) && day.started_at.present? && day.finished_at.blank? %>
              <%= link_to "退勤登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendanse" %>
            <% end %>
          </td>
          <td>
           <% if day.started_at.present? && day.finished_at.present? %>
           <%= str_times = working_times(day.started_at, day.finished_at) %>
           <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
           <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= format_hour(day.scheduled_end_time) if day.scheduled_end_time.present? %></td>
          <td><%= format_min(day.scheduled_end_time) if day.scheduled_end_time.present? %></td>
          <td><%= overtime_info(day.scheduled_end_time, @user.designeted_work_end_time, day.tomorrow) if day.scheduled_end_time.present? %></td>
          <td><%= day.business_processing_content %></td>
          <td><%= day.application %></td>
        </tr>
      <% end %>
    </tbody>

    <tfoot>
      <!--rowspan:縦結合、colspan：横結合-->
     <tr>
        <td rowspan="2"></td>
        <td colspan="2">累計日数</td>
        <td colspan="5"></td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td></td>
        <td></td>
        <td></td>
        <td rowspan=2>
         <form class="form-horizontal" action="/hoge/foo" method="post">
          <label for="number" class="control-label">所属長承認　未</label>
           <select class="form-control">
             <option value="a">上長A</option>
             <option value="b">上長B</option>
           </select><br>
          <button type="submit" class="btn btn-primary">申請する</button>
         </form>
        </td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="5"></td>
        <td colspan="2"><%= format_basic_info(@user.basic_work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tfoot>    
  </table>
</div>